<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FC000000</item>
        <item name="colorAccent">#F1FFFFFF</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:navigationBarColor">#00000000</item>
    </style>


    <style name="text_header">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">34sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_header_bold" parent="text_header">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text_subheader_bold" parent="text_header_bold">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="text_subheader" parent="text_subheader_bold">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_dialog_item">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="text_normal">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="bold_text_style">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_white</item>
    </style>

    <style name="label_below_icon">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">11sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
