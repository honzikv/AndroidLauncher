<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="text_header_bold">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">40sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_subheader_bold" parent="text_header_bold">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_subheader" parent="text_subheader_bold">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_normal">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="bold_text_style">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_white</item>
    </style>


</resources>
